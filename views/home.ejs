<%- include('partials/header'); -%>
<h1>Home</h1>

<p> <%= homeStart %> </p>

<% blogPosts.forEach(post => { %>
    <h2><%= post.title %></h2>
    <p><%= post.body.substring(0, 100) + "... "%>
    <% if(post.body.length > 200) { %>
        <a href="posts/<%= post._id %>">Read More</a>
    <% } %>
    </p>
<% }); %>

<%- include('partials/footer'); -%>